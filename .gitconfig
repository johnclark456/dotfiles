[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[pull]
	rebase = true
[init]
	defaultBranch = main
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	conflictstyle= = zdiff3
[difftool]
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
	prompt = false
