[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[pull]
	rebase = true
[init]
	defaultBranch = main
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	conflictStyle = zdiff3
[difftool]
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
	prompt = false
[user]
	name = John Clark
	email = john.clark@cantab.net
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
